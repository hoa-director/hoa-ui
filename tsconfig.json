{
  "compileOnSave": false,

  "compilerOptions": {
    "baseUrl": "src",

    "paths": {
      "schemas": ["schema/schemas"]
    },
    "outDir": "./dist/out-tsc",

    "sourceMap": true,

    "declaration": false,

    "moduleResolution": "node",

    "emitDecoratorMetadata": true,

    "experimentalDecorators": true,

    "typeRoots": ["node_modules/@types"],
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
  },
  "exclude": ["node_modules", "build", "dist"]
}
